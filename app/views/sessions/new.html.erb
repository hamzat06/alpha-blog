<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= form_with(scope: :session, url: login_path, class: 'shadow mb-3 p-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: 'col-sm-2 col-form-label text-light' %>
          <div class="col-md-10">
            <%= f.email_field :email, class: 'form-control shadow rounded', placeholder: 'Enter email' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: 'col-sm-2 col-form-label text-light' %>
          <div class="col-md-10">
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Enter password' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Log in", class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
    <%= link_to articles_path, class: 'font-weight-bold mb-3' do %>
      <i class="bi bi-chevron-left mr-2 text-info"></i>Back to articles listing
    <% end %>
  </div>
</div>
