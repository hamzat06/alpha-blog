<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: 'shadow mb-3 p-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: 'col-sm-2 col-form-label text-light' %>
          <div class="col-md-10">
            <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter a category name' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
      <%= link_to articles_path, class: 'font-weight-bold mb-3' do %>
        <i class="bi bi-chevron-left mr-2 text-info"></i>Back to articles listing
      <% end %>
    </div>
  </div>
</div>
