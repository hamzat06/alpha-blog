<h1 class="text-center mt-4">All Categories</h1>

<div class="container">
  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-md-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title px-1"><%= link_to category.name, category_path(category), class: 'text-success' %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            <%= link_to 'Show', category_path(category), class: 'btn btn-outline-success' %>
            <% if logged_in? && current_user.admin? %>
              <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-primary' %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>created <%= time_ago_in_words(category.created_at) %> ago,
              edited <%= time_ago_in_words(category.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
</div>
