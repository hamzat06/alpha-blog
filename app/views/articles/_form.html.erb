<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: 'shadow mb-3 p-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: 'col-sm-2 col-form-label text-light' %>
          <div class="col-md-10">
            <%= f.text_field :title, class: 'form-control shadow rounded', placeholder: 'Title of article' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: 'col-sm-2 col-form-label text-light' %>
          <div class="col-md-10">
            <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded', placeholder: 'Description of article' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
    <%= link_to articles_path, class: 'font-weight-bold mb-3' do %>
      <i class="bi bi-chevron-left mr-2 text-info"></i>Back to articles listing
    <% end %>
  </div>
</div>
